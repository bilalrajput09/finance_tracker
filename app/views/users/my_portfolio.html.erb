<h1>My Portfolio</h1>


<div class="search-area">
    <h3>Search Stocks</h3>
    <%= form_tag search_stock_path, method: :get do%>
        <div class="form-group row">
            <div class="col-sm-9 no_right_padding">
                <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker", autofocus: true,class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3 no_left_padding">
                <%= button_tag type: :submit, class: "btn btn-success btn-lg" do%>
                <%= 'search' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>
<%= render "users/result"%>
