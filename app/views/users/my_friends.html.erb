<h1>My Friends</h1>
<div class="search-area">
    <h3>Search Friends</h3>
    <%= form_tag search_friends_path, method: :get do%>
        <div class="form-group row">
            <div class="col-sm-9 no_right_padding">
                <%= text_field_tag :friend, params[:friend], placeholder: "friend name", autofocus: true,class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3 no_left_padding">
                <%= button_tag type: :submit, class: "btn btn-success btn-lg" do%>
                <%= 'search' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>


<% if !@friends.empty? %>
    <%= render "friends/list"%>
<% end %>